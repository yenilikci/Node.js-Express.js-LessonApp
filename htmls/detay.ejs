<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="detay content">
        <h2><%= ders.baslik %></h2>
        <div class="content">
            <p><%= ders.icerik %></p>
            <hr>
            <b>Olu≈üturma Tarihi: </b><p><%= ders.createdAt %></p>
        </div>
        <a data-doc="<%= ders._id %>" class="sil">Dersi Sil</a>
    </div>
    <script>
        const silButton = document.querySelector('a.sil')
        silButton.addEventListener('click',(e) => {
            const endPoint = `/dersler/${silButton.dataset.doc}`
            fetch(endPoint,{
                method:'DELETE'
            }).then(response => response.json())
            .then(data => window.location.href = data.redirect)
            .catch((err) => console.log(err))
        })
    </script>
</body>
</html>